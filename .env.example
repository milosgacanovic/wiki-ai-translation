MW_API_URL=https://wiki.danceresource.org/api.php
MW_USERNAME=botuser
MW_PASSWORD=botpass
MW_USER_AGENT=DanceResourceTranslationBot/0.1

DATABASE_URL=postgresql://bot:bot@db:5432/bot

BOT_POLL_INTERVAL=60
BOT_MAX_RETRIES=5
BOT_AUTO_WRAP=1
BOT_SOURCE_LANG=en
BOT_TARGET_LANGS=sr,it
BOT_SKIP_TRANSLATION_SUBPAGES=1

BOT_MT_PRIMARY=google
BOT_MT_FALLBACK=azure

GCP_PROJECT_ID=your-project-id
GCP_LOCATION=global
GCP_CREDENTIALS_PATH=.secrets/wiki-translate-bot.json

# Optional: call Translate extension API to mark pages for translation
BOT_TRANSLATE_MARK_ACTION=markfortranslation
BOT_TRANSLATE_MARK_PARAMS={"title":"{title}","translatetitle":"yes"}

# Optional: place disclaimer by marker comment
BOT_DISCLAIMER_MARKER=<!--BOT_DISCLAIMER-->

# Optional: skip translation for title prefixes
BOT_SKIP_TITLE_PREFIXES=Conscious Dance Practices/InnerMotion/The Guidebook/

# Optional: move disclaimer inside first segment by page + language anchor
# Example:
# BOT_DISCLAIMER_ANCHORS={"Welcome_to_the_DanceResource_Wiki":{"sr":"To learn what we stand for, read our Core Values, and explore the vision that moves us in the Manifesto."}}
BOT_DISCLAIMER_ANCHORS=

# Optional: invisible marker placed in source wikitext to position the disclaimer
# Example: place <!--BOT_DISCLAIMER--> where the disclaimer should appear
BOT_DISCLAIMER_MARKER=

# Optional: skip translation for titles that start with these prefixes (comma-separated)
# Example: BOT_SKIP_TITLE_PREFIXES=Conscious Dance Practices/InnerMotion/The Guidebook/
BOT_SKIP_TITLE_PREFIXES=
